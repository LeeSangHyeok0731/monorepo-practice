{
  "compilerOptions": {
    "target": "ESNext", // 최신 JavaScript 기능 사용
    "module": "ESNext", // 최신 모듈 시스템 사용
    "jsx": "react-jsx", // JSX 변환을 React 17+ 방식으로 설정
    "moduleResolution": "node", // Node.js 모듈 해석 방식
    "strict": true, // 엄격한 타입 검사를 활성화
    "esModuleInterop": true, // CommonJS와 ES 모듈 간의 호환성 제공
    "skipLibCheck": true, // 라이브러리 타입 검사 건너뜀
    "forceConsistentCasingInFileNames": true // 파일 이름 대소문자 일관성 유지
  }
}
