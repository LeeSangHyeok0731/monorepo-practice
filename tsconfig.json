{
  "compilerOptions": {
    "baseUrl": ".", // 루트를 기준으로 절대 경로 설정
    "paths": {
      "shared/*": ["packages/shared/*"] // 공통 패키지 alias
    },
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*", "apps/**/*"],
  "exclude": ["node_modules", "dist"]
}
